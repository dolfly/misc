CC = gcc
CFLAGS = -Wall -O2 -g -I.
LDFLAGS = 
DDIR = poissonrun-{VERSION}

poissonrun:	poissonrun.c version.h
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $<

install:	poissonrun
	install poissonrun {PREFIX}/bin/

clean:	
	rm -f poissonrun

mydist:	
	mkdir -p $(DDIR)
	cp ChangeLog Makefile.in configure poissonrun.c $(DDIR)/
